<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F9"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_weight="1"
        android:background="#FFF"
        android:paddingLeft="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="@drawable/back"
        android:id="@+id/fht3"/>
    <TextView
        android:id="@+id/fhz3"
        android:layout_marginTop="10sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="湖北健康码"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/fht3"/>
        />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="基本信息"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold"/>
    <LinearLayout
        android:elevation="5dp"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

         <TextView
             android:layout_marginTop="12sp"
             android:id="@+id/xh1"
             android:textStyle="bold"
             android:textSize="20sp"
             android:layout_marginLeft="15sp"
             android:text="*"
             android:textColor="#c63135"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="15sp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓         名"
                android:textColor="#000"
                android:layout_toRightOf="@+id/xh1"/>
        <EditText
        android:layout_toRightOf="@+id/xh1"
        android:paddingRight="15sp"
        android:id="@+id/xm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:text="张三"
        android:gravity="end|center"
        android:inputType="text"
        android:textColor="#CDCDC1"
        android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="12sp"
                android:id="@+id/xh2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="15sp"
                android:text="*"
                android:textColor="#c63135"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="15sp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="#000"
                android:layout_toRightOf="@+id/xh2"/>
            <EditText
                android:layout_toRightOf="@+id/xh2"
                android:paddingRight="15sp"
                android:id="@+id/sjh"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:text="4****************4"
                android:gravity="end|center"
                android:inputType="text"
                android:textColor="#CDCDC1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D7D7D7"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="12sp"
                android:id="@+id/xh3"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="15sp"
                android:text="*"
                android:textColor="#c63135"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="15sp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="#000"
                android:layout_toRightOf="@+id/xh3"/>
            <EditText
                android:layout_toRightOf="@+id/xh3"
                android:paddingRight="15sp"
                android:id="@+id/sjhm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:text="158******35"
                android:gravity="end|center"
                android:inputType="text"
                android:textColor="#CDCDC1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D7D7D7"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="12sp"
                android:id="@+id/xh4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="15sp"
                android:text="*"
                android:textColor="#c63135"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="15sp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地          址"
                android:textColor="#000"
                android:layout_toRightOf="@+id/xh4"/>
            <EditText
                android:layout_toRightOf="@+id/xh4"
                android:paddingRight="15sp"
                android:id="@+id/dz"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:text="一组52号"
                android:gravity="end|center"
                android:inputType="text"
                android:textColor="#CDCDC1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D7D7D7"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="健康状态"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:layout_marginLeft="15sp"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_weight="4"
        android:elevation="5dp"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45sp">

        <TextView
            android:layout_marginTop="12sp"
            android:id="@+id/xh5"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="15sp"
            android:text="*"
            android:textColor="#c63135"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="15sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前健康情况"
            android:textColor="#000"
            android:layout_toRightOf="@+id/xh5"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/chb1"
                android:layout_marginLeft="33sp"
                android:layout_width="wrap_content"
                android:text="健康"
                android:textSize="18sp"
                android:textColor="#CDCDC1"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/chb2"
                android:layout_toRightOf="@id/chb1"
                android:layout_marginLeft="50sp"
                android:layout_width="wrap_content"
                android:text="发热"
                android:textSize="18sp"
                android:textColor="#CDCDC1"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:layout_toRightOf="@id/chb2"
                android:layout_marginLeft="50sp"
                android:layout_width="wrap_content"
                android:text="咳嗽"
                android:textSize="18sp"
                android:textColor="#CDCDC1"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/chb3"
                android:layout_marginLeft="33sp"
                android:layout_width="wrap_content"
                android:text="胸闷"
                android:textSize="18sp"
                android:textColor="#CDCDC1"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:layout_toRightOf="@id/chb3"
                android:layout_marginLeft="50sp"
                android:layout_width="wrap_content"
                android:text="已治愈"
                android:textSize="18sp"
                android:textColor="#CDCDC1"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_marginLeft="33sp"
                android:layout_width="wrap_content"
                android:text="腹泻乏力等其他症状"
                android:textSize="18sp"
                android:textColor="#CDCDC1"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D7D7D7"
            android:orientation="vertical" >
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45sp">

            <TextView
                android:layout_marginTop="12sp"
                android:id="@+id/xh6"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="15sp"
                android:text="*"
                android:textColor="#c63135"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="15sp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14天内是否接触过疑似或确诊人员"
                android:textColor="#000"
                android:layout_toRightOf="@+id/xh6"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_marginBottom="15sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
        android:id="@+id/rbn1"
        android:layout_marginLeft="33sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是"
        android:textColor="#CDCDC1"
        android:textSize="18sp"/>
            <RadioButton
                android:layout_marginLeft="69sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:textColor="#CDCDC1"
                android:textSize="18sp"/>
    </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_marginTop="15sp"
        android:elevation="5dp"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_marginLeft="33sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="本人郑重承诺:"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="65sp"
            android:layout_marginRight="10sp"
            android:textSize="14sp"
            android:text="上述信息是我本人或代他人填写，本人对信息内容真实性和完整性负责，因信息填报不实导致相关后果的，本人愿承担责任。"/>
    </LinearLayout>
    <Button
        android:layout_marginBottom="5sp"
        android:id="@+id/btn_qrtj"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:layout_weight="1"
        android:text="确认提交"
        android:textSize="20sp"
        android:background="@drawable/blue2"
        android:layout_marginTop="10sp"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>